<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="equipmentStack"
            type="com.kirodinstudios.adventurerspack_ddinventorymanagementtool.model.EquipmentStack" />

        <variable
            name="callback"
            type="com.kirodinstudios.adventurerspack_ddinventorymanagementtool.ui.EquipmentStackClickCallback" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:onClick="@{() -> callback.onClick(equipmentStack)}"

        android:orientation="horizontal"
        android:padding="8dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{equipmentStack.name}" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>