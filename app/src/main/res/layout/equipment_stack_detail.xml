<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="equipmentStack"
            type="com.kirodinstudios.dungeoneerspack.model.EquipmentStack" />

        <import type="com.kirodinstudios.dungeoneerspack.DisplayDataConverter"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/equipment_stack_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@{equipmentStack.getEquipmentTemplate.getName()}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/equipment_stack_detail_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:text='@{"Count: " + equipmentStack.getCount()}'
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintEnd_toStartOf="@+id/equipment_stack_detail_type"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/equipment_stack_detail_name" />

        <TextView
            android:id="@+id/equipment_stack_detail_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text='@{DisplayDataConverter.getA(equipmentStack)}'
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBaseline_toBaselineOf="@+id/equipment_stack_detail_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/equipment_stack_detail_count" />

        <TextView
            android:id="@+id/equipment_stack_detail_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text='@{"Cost (gp): " + equipmentStack.getEquipmentTemplate().getCostInGp()}'
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintEnd_toStartOf="@+id/equipment_stack_detail_weight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/equipment_stack_detail_type" />

        <TextView
            android:id="@+id/equipment_stack_detail_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text='@{"Weight (lbs): " + Double.toString(equipmentStack.getEquipmentTemplate().getWeightInPounds())}'
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBaseline_toBaselineOf="@+id/equipment_stack_detail_cost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/equipment_stack_detail_cost" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>