<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="equipmentStack"
            type="com.kirodinstudios.dungeoneerspack.model.EquipmentStack" />

        <variable
            name="callback"
            type="com.kirodinstudios.dungeoneerspack.ui.EquipmentStackClickCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:onClick="@{() -> callback.onClick(equipmentStack)}"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@{equipmentStack.getEquipmentTemplate.getName()}"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@{Integer.toString(equipmentStack.count)}"
            android:textSize="14sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@{Double.toString(equipmentStack.getEquipmentTemplate().getWeightInPounds())}"
            android:textSize="14sp" />

    </LinearLayout>
</layout>